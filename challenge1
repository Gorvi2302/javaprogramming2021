public class Sample {

 
    public static void main(String[] args) {
        // TODO code application logic here
        int mins, yrs, days;
       Scanner sc= new Scanner(System.in);
       System.out.println("Enter the number of minutes to convert them into years and days: ");
       mins= sc.nextInt();
       yrs = mins/(60*24*365);
       days = (mins/60/24)%365;


       System.out.println(mins+" minutes is approximately equal to "+yrs+" years and "+days+" days.");
       
    }
   
}
